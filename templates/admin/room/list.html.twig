{% extends 'admin/base.html.twig' %}

{% block title %}Room list{% endblock %}

{% block content %}
    <h1>Room list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>maximum seats</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.maximumSeats }}</td>
                <td>
                    <a href="{{ path('admin_room_show', {'id': room.id}) }}" class="btn btn-dark color-white">show</a>
                    <a href="{{ path('admin_room_edit', {'id': room.id}) }}" class="btn btn-info color-white">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_room_new') }}" class="btn btn-success color-white" >Create new</a>
{% endblock %}
