{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_list') }}" class="btn btn-secondary color-white">back to list</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info color-white">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
