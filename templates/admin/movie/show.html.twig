{% extends 'admin/base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block content %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_movie_list') }}" class="btn btn-secondary color-white">back to list</a>

    <a href="{{ path('admin_movie_edit', {'id': movie.id}) }}" class="btn btn-info color-white">edit</a>

    {{ include('admin/movie/_delete_form.html.twig') }}
{% endblock %}
