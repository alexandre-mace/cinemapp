{% extends 'client/base.html.twig' %}

{% block content %}
    <section class="row d-flex justify-content-center">
        <div class="col-12 mb-5">
            <div class="col-4 m-auto text-center">
                {{ form(form) }}
            </div>
        </div>
        {% for movie in movies %}
            <a class="col-3 border rounded m-3 p-5" href="{{ path('client_movie_show', { id: movie.id }) }}">
                <img src="{{ asset('uploads/images/' ~ movie.image.fileName) }}">
                <h4 class="mt-2">{{ movie.title }}</h4>
                <p>{{ movie.synopsis }}</p>
            </a>
        {% endfor %}
    </section>
{% endblock %}
