{% extends 'client/base.html.twig' %}

{% block title %}Booking list{% endblock %}

{% block content %}
    <h1>Booking list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>session</th>
                <th>seats</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.session }}</td>
                <td>{{ booking.seats }}</td>

                <td>
                    <a href="{{ path('client_booking_show', {'id': booking.id}) }}" class="btn btn-dark color-white">show</a>
                    {{ include('client/booking/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_booking_new') }}" class="btn btn-success color-white">Create new</a>
{% endblock %}
